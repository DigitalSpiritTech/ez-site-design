{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "jsRules": {},
    "rules": {
        // use single quotes, but enforce double quotes in JSX
        "quotemark": [true, "single", "jsx-double"],
        // I prefer no semi colons :)
        "semicolon": [true, "never"]
    },
    "rulesDirectory": []
}